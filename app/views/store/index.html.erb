<div class="container">

    <div class="page-header">
      <h1>Product header</h1>
    </div>


    <div class="col-md-3">
      <% @active_categories.each do |c| %>
          <div class="list-group">

            <div><%= link_to(c.category_name, store_path(:category_id => c.id), :method => :GET, :class =>'list-group-item') %></div>

          </div>
      <% end %>
    </div>

  <div class="col-md-9">

    <div class="row">
      <% @products.each do |p| %>

      <div class="col-md-6">


        <div class="thumbnail">

          <% imageArray = Array.new
             x = 0
             @images.where(:product_id => p.id).each do |pimage|
                imageArray << pimage
             end
          %>
          <%  while x < imageArray.length do%>
            <a href="<%= imageArray[x].image.url(:retina) %>" data-lightbox="Product_<%= p.id %>">


               <%= image_tag(imageArray[x].image.url(:mini_thumb)) %>

          <%   x = x +1
               end %> </a>

          <div class="caption" id="product_description">
            <h3><%= p.product_name %></h3>
            <p><%= p.note.truncate(150)%></p>

            <h3><%= number_to_currency(p.price)%></h3>

            <%= link_to('More Info', product_information_path(p.id), :method => :GET, :class => 'btn btn-default') %>
            <a href="#" class="btn btn-primary" role="button">Buy Now</a>


          </div>
        </div>

      </div>

      <%end%>
   </div>

 </div>
</div>


