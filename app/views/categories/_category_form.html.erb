<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
  <table class="table table-hover.table-bordered">
    <thead>
    <th>Category</th>
    <th>Active?</th>
    <th>Action</th>
    </thead>

    <tbody>
    <% @categories.each do |c| %>
    <tr>
      <td><%= c.category_name%></td>
      <td><%= c.active%></td>
      <td><%= link_to 'Delete', category_path(c), :method => :delete%> |
          <%= link_to 'Edit', edit_category_path(c)%> </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
  <h4>Add new Category</h4>
  <%= simple_form_for(@category) do |form| %>
    <form>
        <div class="form-group">

          <%= form.input :category_name, :input_html => {:maxlength => 30, :style=> 'width: 300px'}%>
          <%= form.input :active, :as => :boolean, :label => false, :default => true, :inline_label => 'Active'%>
          <%= form.button :submit, class: "btn btn-primary"%>

        </div>
    </form>
  <% end %>
</div>


