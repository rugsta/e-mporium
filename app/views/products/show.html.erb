<%= render "/layouts/admin_navigation"%>

    <table class="table table-hover.table-bordered">
        <thead>
        <th>Product</th>
        <th>Category</th>
        <th>Note</th>
        <th>Price</th>
        <th>Archived</th>
        <th>Action</th>
        </thead>

        <tbody>
            <tr>
              <td><%= @product.product_name%></td>
              <td><%= @product.category_id%></td>
              <td><%= @product.note%></td>
              <td><%= @product.price%></td>
              <td><%= @product.archived%></td>
              <td><%= link_to 'Delete', product_path(@product), :method => :delete%> |
                  <%= link_to 'Edit', edit_product_path(@product)%> </td>
            </tr>
        </tbody>

    </table>

</div>
