<div class="container">

  <div class="page-header">
    <h1>Product header</h1>
  </div>


  <div class="col-md-3">
    <% @active_categories.each do |c| %>
        <div class="list-group">
          <div><%= link_to(c.category_name, store_path(:category_id => c.id), :method => :GET, :class =>'list-group-item') %></div>
        </div>
    <% end %>
  </div>

  <div class="col-md-6">
    <div class="thumb">

      <% imageArray = Array.new
         x = 0
         @images.each do |pimage|
           imageArray << pimage
         end
      %>
      <%  while x < imageArray.length do%>
          <a href="<%= imageArray[x].image.url(:retina) %>" data-lightbox="Product_<%= @product.id %>">

            <%= image_tag(imageArray[x].image.url(:mini_thumb)) %>

      <%   x = x +1
           end %> </a>

      <div class="caption" id="product_description">
        <h3><%= @product.product_name %></h3>
        <p><%= @product.note%></p>

        <h3><%= number_to_currency(@product.price)%> </h3>
        <p><a href="#" class="btn btn-primary" role="button">Buy Now</a></p>
      </div>
    </div>
  </div>

</div>
