<div class="container">
  <div class="row padded-form">

    <table class="table table-hover.table-bordered">
        <thead>
        <th>Title</th>
        <th>Category</th>
        <th>Note</th>
        <th>Completed?</th>
        <th>Action</th>
        </thead>

        <tbody>
            <tr>
              <td><%= @task.title%></td>
              <td><%= @task.category_id%></td>
              <td><%= @task.note%></td>
              <td><%= @task.price%></td>
              <td><%= @task.completed%></td>
              <td><%= link_to 'Delete', task_path(@task), :method => :delete%> |
                  <%= link_to 'Edit', edit_task_path(@task)%> </td>
            </tr>
        </tbody>

    </table>

  </div>
</div>
